Author: Daniel Baumann <daniel@debian.org>
Description: Adjusts examples to Debian commodities (Closes: #542685).

diff -Naurp gitosis.orig/etc-event.d-local-git-daemon gitosis/etc-event.d-local-git-daemon
--- gitosis.orig/etc-event.d-local-git-daemon	2009-08-24 12:30:01.000000000 +0200
+++ gitosis/etc-event.d-local-git-daemon	2009-08-27 11:57:03.000000000 +0200
@@ -6,6 +6,6 @@ exec /usr/bin/git-daemon \
 	--user-path=public-git \
 	--verbose \
 	--reuseaddr \
-	--base-path=/srv/example.com/git/repositories/ \
-	/srv/example.com/git/repositories/
+	--base-path=/srv/gitosis/repositories/ \
+	/srv/gitosis/repositories/
 respawn
diff -Naurp gitosis.orig/gitweb.conf gitosis/gitweb.conf
--- gitosis.orig/gitweb.conf	2009-08-24 12:30:01.000000000 +0200
+++ gitosis/gitweb.conf	2009-08-27 11:58:06.000000000 +0200
@@ -4,10 +4,10 @@ do "/etc/gitweb.conf" if -e "/etc/gitweb
 # Point to projects.list file generated by gitosis.
 # Here gitosis manages the user "git", who has a
 # home directory of /srv/example.com/git
-$projects_list = "/srv/example.com/git/gitosis/projects.list";
+$projects_list = "/srv/gitosis/gitosis/projects.list";
 
 # Where the actual repositories are located.
-$projectroot = "/srv/example.com/git/repositories";
+$projectroot = "/srv/gitosis/repositories";
 
 # By default, gitweb will happily let people browse any repository
 # they guess the name of. This may or may not be what you wanted.  I
diff -Naurp gitosis.orig/lighttpd-gitweb.conf gitosis/lighttpd-gitweb.conf
--- gitosis.orig/lighttpd-gitweb.conf	2009-08-24 12:30:01.000000000 +0200
+++ gitosis/lighttpd-gitweb.conf	2009-08-27 11:58:16.000000000 +0200
@@ -16,7 +16,7 @@ alias.url += (
 
 $HTTP["url"] =~ "^/gitweb/" {
   setenv.add-environment = (
-    "GITWEB_CONFIG" => "/srv/example.com/gitweb/gitweb.conf",
+    "GITWEB_CONFIG" => "/srv/gitosis/gitweb/gitweb.conf",
   )
   cgi.assign = ( "" => "" )
 }
